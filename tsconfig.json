{
  "compilerOptions": {
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/types.ts"],
  },
  "files": ["src/index.ts"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
